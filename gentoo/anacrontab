# /etc/anacrontab: configuration file for anacron

# See anacron(8) and anacrontab(5) for details.

SHELL=/bin/sh
PATH=/sbin:/bin:/usr/sbin:/usr/bin
MAILTO=root
# the maximal random delay added to the base delay of the jobs
RANDOM_DELAY=10
# the jobs will be started during the following hours only
START_HOURS_RANGE=18-23

#period in days   delay in minutes   job-identifier   command
# 1	5	cron.daily		nice run-parts /etc/cron.daily
# 7	25	cron.weekly		nice run-parts /etc/cron.weekly
# @monthly 45	cron.monthly		nice run-parts /etc/cron.monthly

@daily 5 rsnapshot.daily /etc/anacron.d/rsnapshot.daily
@weekly 5 rsnapshot.weekly /etc/anacron.d/rsnapshot.weekly
@monthly 5 rsnapshot.monthly /etc/anacron.d/rsnapshot.monthly

@daily 0 logrotate /etc/anacron.d/logrotate
@daily 0 emerge-sync emerge --sync
@daily 10 eix-sync eix-sync

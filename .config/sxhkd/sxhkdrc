#
# wm independent hotkeys
#

# Custom dmenu commands
super + c
	~/bin/launch.sh

# terminal emulator
super + Return
	urxvtc

super + backslash
	st
	# st -p 1

#super + semicolon
super + n
	alacritty

super + v
	emacsclient -c -a emacs

# super + r
# 	~/bin/ricerez.sh

# lockscreen
super + shift + x
	~/bin/lock.sh

# launch
super + {_,shift} + p
	{~/bin/dmenu_run_history.sh ~/bin/drofi,sudo dmenu_run}

super + s; super + s
	rofi -show ssh

super + s; super + k
	~/bin/screenkey.sh

# applications

super + x ; super + {Caps_Lock,a,b,e,i,f,p,c,d,q,r,s,t,u,z} 
	{ \
	:, \
	alacritty, \
	brave, \
	pkill emacs; emacs --daemon, \
	brave -incognito, \
	firefox, \
	firefox -private-window, \
	code, \
	pcmanfm, \
	tabbed -c vimb -e, \
	urxvtc -e ranger, \
	st, \
	tor-browser, \
	urxvt, \
	~/bin/zathura.sh \
	}

# screenshot
Print
	maim -s | xclip -sel clip -t image/png
	#flameshot {gui,full -c} -p ~/screenshots

{super,shift} + Print
	maim {_,-s} ~/images/screenshots/$(date +%+4Y-%m-%d_%H%M%S).png

# wallpaper
super + w; super + {s,a}
	~/bin/wallpaper.sh {_,-r}

super + shift + s
	systemctl suspend

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# Volume

XF86Audio{Lower,Raise}Volume
	~/bin/volume.sh {-,+}5
	#pactl set-sink-volume @DEFAULT_SINK@ {-,+}5%

shift + XF86Audio{Lower,Raise}Volume
	~/bin/volume.sh {-,+}1

XF86AudioMute
	~/bin/volume.sh mute

XF86Audio{Play,Prev,Next}
	~/bin/media.sh {play,prev,next}


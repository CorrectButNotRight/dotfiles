#
# wm independent hotkeys
#

# Custom dmenu commands
super + c
	~/bin/launch.sh

# terminal emulator
super + {_,shift +} Return
	{_,sudo }st
	# {_,sudo }alacritty --config-file ~/.config/alacritty/rice.yml

super + backslash
	st -p 1

#super + semicolon
super + n
	alacritty

# lockscreen
super + shift + x
	~/bin/lock.sh
	# light-locker-command -l

# launch
super + {_,shift} + space
	{~/bin/dmenu_run_history.sh,sudo dmenu_run}
	#{_,sudo} rofi -show run	

# applications
super + x ; super + {Caps_Lock,a,b,i,f,p,c,d,q,r,s,l,u,z} 
	{:,alacritty,brave,brave -incognito,firefox,firefox -private-window,code,pcmanfm,tabbed -c surf -e,st ranger,steam,lutris,urxvt,tabbed -c zathura -e}

# screenshot
Print
	maim -s | xclip -sel clip -t image/png
	#flameshot {gui,full -c} -p ~/screenshots

{super,shift} + Print
	maim {_,-s} ~/images/screenshots/$(date +%+4Y-%m-%d_%H%M%S).png

# compositor
super + Insert
	picom -b
super + Delete
	pkill picom

# wallpaper
super + s
	~/bin/wallpaper.sh

super + a
	~/bin/wallpaper.sh -r

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit/restart bspwm
super + shift + r
	bspc wm -r
super + shift + e
	[ $(echo -e "Exit\nCancel" | dmenu -i -p "Exit this session?") = "Exit" ] \
	&& bspc quit

super + shift + s
	systemctl suspend

# close and kill
super + shift + {q,c}
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
#super + y
#	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
#super + s
#	bspc node -s biggest

# Rotate desktop
super + bracket{left,right}
	bspc node @/ --rotate {-90,90}

super + {e,w}
	bspc node @/ -{E,B}

super + {v,b}
	bspc node @/ --flip {vertical,horizontal}

#
# state/flags
#

# set the window state
super + {t,shift + t,shift + f}
	bspc node -t \~{tiled,pseudo_tiled,floating}

super + f
	~/bin/bspwm/full.sh
	# bspc node -t \~fullscreen

# set the node flags
#super + ctrl + {m,x,y,z}
#	bspc node -g {marked,locked,sticky,private}

super + ctrl + m
	bspc node -g marked

super + ctrl + n
	~/bin/bspwm/hide.sh

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
#super + {p,b,comma,period}
#	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }grave
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + ctrl + {Left,Right}
	bspc desktop -f {prev,next}.local

super + Tab
	bspc desktop -f last
	#bspc node -f last.local

# focus the older or newer node in the focus history
#super + {o,i}
#alt + {_,shift + } grave
#	bspc wm -h off; \
#	bspc node {older,newer} -f; \
#	bspc wm -h on

# focus to the given desktop
super + {0-9}
	~/bin/bspwm/focusdesktop.sh {0-9}

#super + d ; super + {g,a,r}
#	~/bin/bspwm/{godesktop,adddesktop,removedesktop}.sh

# send to the given desktop
super + shift + {0-9}
	bspc node -d $(~/bin/bspwm/desktopname.sh '{0-9}')

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p \~{west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	~/bin/bspwm/resize.sh {left,bottom,top,right}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + alt + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Increase/decrease window gap on focused desktop
super + {Page_Down,Page_Up}
	bspc config -d focused window_gap $(( $(bspc config -d focused window_gap) {-,+} 3 ))

super + {End,Home}
	bspc config -d focused window_gap {0,18}

# Volume

XF86Audio{Lower,Raise}Volume
	~/bin/volume.sh {-,+}5
	#pactl set-sink-volume @DEFAULT_SINK@ {-,+}5%

shift + XF86Audio{Lower,Raise}Volume
	~/bin/volume.sh {-,+}1
	#pactl set-sink-volume @DEFAULT_SINK@ {-,+}1%

XF86AudioMute
	~/bin/volume.sh mute
	#pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86Audio{Play,Prev,Next}
	~/bin/media.sh {play,prev,next}

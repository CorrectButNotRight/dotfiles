#
# bspwm hotkeys
#

# super + shift + {q,c}
# 	bspc node -{c,k}
super + shift + c
	bspc node -k

# quit/restart bspwm
super + shift + r
	bspc wm -r

super + shift + e
	[ $(echo "Exit\nCancel" | drofi "Exit this session?") = "Exit" ] \
	&& bspc quit
	# [ $(echo -e "Exit\nCancel" | dmenu -i -p "Exit this session?") = "Exit" ] \
	# && bspc quit

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next
	# ~/bin/bspwm/biggest.sh
	# bspc node -s biggest.local
	# ~/bin/bspwm/monocle.sh

# send the newest marked node to the newest preselected node
#super + y
#	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
#super + s
#	bspc node -s biggest


# Rotate desktop
super + bracket{left,right}
	bspc node @/ --rotate {270,90}

super + e
	bspc node @/ -E

# super + {e,r}
# 	bspc node @/ -{E,B}

super + {v,b}
	bspc node @/ --flip {vertical,horizontal}

#
# state/flags
#

# set the window state
super + {t,shift + t,f}
	bspc node -t \~{tiled,pseudo_tiled,floating}

# super + f
	# bspc desktop -l next
	# bspc node -t \~fullscreen
	# ~/bin/bspwm/full.sh

# set the node flags
#super + ctrl + {m,x,y,z}
#	bspc node -g {marked,locked,sticky,private}

super + ctrl + m
	bspc node -g marked

super + ctrl + n
	~/bin/bspwm/hide.sh

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}
	# ~/bin/bspwm/key-handler.sh {0,S} {h,j,k,l}

super + {_,shift + }{Left,Down,Up,Right}
	~/bin/bspwm/key-handler.sh {0,S} {h,j,k,l}
	# bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
#super + {p,b,comma,period}
#	bspc node -f @{parent,brother,first,second}

super + {_,shift + }grave
	bspc node @/ -C {forward,backward}
# focus the next/previous node in the current desktop
# super + {_,shift + }grave
	# bspc node -f {next,prev}.local
	# ~/bin/bspwm/cycle.sh {next,prev}

# focus the next/previous desktop in the current monitor
super + ctrl + {Left,Right}
	bspc desktop -f {prev,next}.local

super + Tab
	bspc desktop -f last
	#bspc node -f last.local

# focus the older or newer node in the focus history
#super + {o,i}
#alt + {_,shift + } grave
#	bspc wm -h off; \
#	bspc node {older,newer} -f; \
#	bspc wm -h on

# focus to the given desktop
super + {0-9}
	~/bin/bspwm/focusdesktop.sh {0-9}

#super + d ; super + {g,a,r}
#	~/bin/bspwm/{godesktop,adddesktop,removedesktop}.sh

# send to the given desktop
super + shift + {0-9}
	~/bin/bspwm/senddesktop.sh {0-9}
	# bspc node -d $(~/bin/bspwm/desktopname.sh '{0-9}')

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	~/bin/bspwm/receptacle.sh spawn {west,south,north,east}
	# bspc node -p \~{west,south,north,east}

# receptacles
super + ctrl + u;
	~/bin/bspwm/receptacle.sh kill

super + ctrl + s
	~/bin/bspwm/receptacle.sh swap

super + ctrl + q;
	~/bin/bspwm/receptacle.sh killall

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
# super + ctrl + space
# 	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# kill all nodes on screen
super + ctrl + shift + q
	bspc query -N -d | xargs -I _id bspc node _id -c

# mark all nodes (local desktop)
super + ctrl + shift + m
	bspc query -N -n '.!hidden.local.window' | xargs -I _id bspc node _id -g marked

# unhide all nodes (globally)
super + ctrl + shift + n
	bspc query -N -n '.hidden' | xargs -I _id bspc node _id -g hidden=off

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	~/bin/bspwm/resize.sh {left,bottom,top,right}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + alt + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Increase/decrease window gap on focused desktop
super + {Page_Down,Page_Up}
	bspc config -d focused window_gap $(( $(bspc config -d focused window_gap) {-,+} 3 ))

super + {End,Home}
	bspc config -d focused window_gap {0,16}
